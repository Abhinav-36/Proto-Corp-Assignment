# RTSP Source
# The RTSP stream URL to convert to HLS
RTSP_SOURCE=rtsp://13.60.76.79:8554/live1

# Server Configuration
# Port on which the streaming server will run
PORT=3001

# HLS Output Directory
# Directory where HLS playlists and segments will be stored
# Relative to the project root or absolute path
HLS_OUTPUT_DIR=./outputs

# Stream Configuration
# Number of distinct HLS streams to create from the RTSP source
STREAM_COUNT=6

# Segment duration in seconds
# How long each video segment should be
SEGMENT_DURATION=2

# Playlist size
# Number of segments to keep in the HLS playlist
PLAYLIST_SIZE=6

# CORS Configuration
# Allowed origin for CORS requests (frontend URL)
CORS_ORIGIN=http://localhost:5173