{
  "name": "proto-streaming-server",
  "version": "1.0.0",
  "description": "RTSP to HLS streaming server using Node.js and Express",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "build": "npm run install:ffmpeg || echo 'FFmpeg installation skipped (may already be installed)'",
    "install:ffmpeg": "bash scripts/install-ffmpeg.sh"
  },
  "keywords": ["rtsp", "hls", "streaming", "ffmpeg"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
